{
  "name": "fastify-mariadb",
  "version": "1.0.7",
  "description": "Fastify MariaDB connection Pool plugin",
  "main": "index.js",
  "scripts": {
    "mariadb": "docker run -d -p 3306:3306 -e MYSQL_ALLOW_EMPTY_PASSWORD=yes --rm mariadb",
    "test": "tap 'test/*.test.js' -j2 --cov --coverage-report=lcov",
    "test:drone": "DB_HOST=drone.mariadb npm test",
    "codecov:upload": "tap --coverage-report=text-lcov && codecov",
    "lint": "standard --verbose | snazzy",
    "lint:fix": "standard --fix",
    "clean": "rm -rf {node_modules,.nyc_output,coverage,package-lock.json,}",
    "rebuild": "npm run clean && npm install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/victor0801x/fastify-mariadb.git"
  },
  "keywords": [
    "fastify",
    "mariadb",
    "mysql",
    "database",
    "connection pool",
    "sql"
  ],
  "author": "Jimmy Huang <victor0801x@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/victor0801x/fastify-mariadb/issues"
  },
  "homepage": "https://github.com/victor0801x/fastify-mariadb#readme",
  "dependencies": {
    "fastify-plugin": "^1.5.0",
    "mariadb": "^2.0.5",
    "sqlstring": "^2.3.1"
  },
  "devDependencies": {
    "codecov": "^3.4.0",
    "fastify": "^2.3.0",
    "release-it": "*",
    "tap": "^12.7.0"
  },
  "release-it": {
    "git": {
      "tagName": "v${version}",
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    }
  }
}
